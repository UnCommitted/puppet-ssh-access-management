#!/bin/bash
#
# This script updates the krl from the master in git
#

# Clone the repository if not already done
if [  ! -d <%= krl_clone_dir -%> ]; then
  mkdir -p <%= krl_clone_dir %> 
  cd <%= krl_clone_dir %> 
  git clone <%= krl_repo %> .
fi

# Update to latest version
cd <%= krl_clone_dir %>
git pull --rebase
